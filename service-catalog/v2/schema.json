{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/DataDog/schema/tree/main/service-catalog/v2/schema.json",
  "title": "Service Definition Schema v2",
  "description": "A service definition for providing additional service metadata and integrations v2",
  "type": "object",
  "properties": {
    "schema-version": {
      "description": "Schema version being used",
      "type": "string",
      "enum": ["v2"]
    },
    "dd-service": {
      "description": "Unique identifier of the service. Must be unique across all services and it used to match with a service in Datadog",
      "type": "string",
      "minLength": 1
    },
    "team": {
      "description": "Team that owns the service",
      "type": "string",
      "minLength": 1
    },
    "contacts": {
      "description": "A list of contacts related to the services. ",
      "type": "array",
      "items": {
        "$ref": "#/$defs/contact"
      }
    },
    "links": {
      "description": "A list of links related to the services. ",
      "type": "array",
      "items": {
        "$ref": "#/$defs/link"
      }
    },
    "repos": {
      "description": "A list of code repositories related to the services. ",
      "type": "array",
      "items": {
        "$ref": "#/$defs/repo"
      }
    },
    "docs": {
      "description": "A list of documentations related to the services. ",
      "type": "array",
      "items": {
        "$ref": "#/$defs/doc"
      }
    },
    "tags": {
      "description": "A set of custom tags",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "integrations": {
      "description": "Third party integrations that Datadog supports",
      "type": "object",
      "properties": {
        "pagerduty": {
          "description": "pagerduty service url for the service",
          "type": "string",
          "pattern": "https:\/\/[a-zA-Z0-9_\\-]+.pagerduty\\.com\/service-directory\/P[a-zA-Z0-9_\\-]+"
        }
      }
    },
    "extensions": {
      "description": "Custom extensions",
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "required": ["schema-version", "dd-service"],
  "$defs": {
    "link": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "name": {
          "description": "Link name",
          "type": "string",
          "minLength": 1
        },
        "type": {
          "description": "Link type",
          "type": "string",
          "enum": [
            "doc",
            "wiki",
            "runbook",
            "url",
            "repo",
            "dashboard",
            "oncall",
            "code",
            "link"
          ]
        },
        "url": {
          "description": "Link url",
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "name",
        "type",
        "url"
      ]
    },
    "contact": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "name": {
          "description": "Contact name",
          "type": "string",
          "minLength": 2
        },
        "type": {
          "description": "Contact type",
          "type": "string",
          "enum": [
            "email",
            "slack"
          ]
        },
        "contact": {
          "description": "Contact value",
          "type": "string"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "email"
              }
            }
          },
          "then": {
            "properties": {
              "contact": {
                "format": "email"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "slack"
              }
            }
          },
          "then": {
            "properties": {
              "contact": {
                "pattern": "https:\/\/[a-zA-Z0-9_\\-]+.slack\\.com\/archives\/[a-zA-Z0-9_\\-]+"
              }
            }
          }
        }
      ],
      "required": [
        "type",
        "contact"
      ]
    },
    "doc": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "name": {
          "description": "Doc name",
          "type": "string",
          "minLength": 1
        },
        "provider": {
          "description": "Doc provider",
          "type": "string",
          "minLength": 1
        },
        "url": {
          "description": "Doc url",
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "name",
        "url"
      ]
    },
    "repo": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "name": {
          "description": "Repo name",
          "type": "string",
          "minLength": 1
        },
        "provider": {
          "description": "Repo provider",
          "type": "string",
          "minLength": 1
        },
        "url": {
          "description": "Repo url",
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "name",
        "url"
      ]
    }
  }
}
